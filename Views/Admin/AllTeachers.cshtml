@using Campus360.ViewModels
@model List<TeacherViewModel>

@{
    ViewData["Title"] = "All Teachers";
}
<h2>All Teachers</h2>

<link rel="stylesheet" href="~/css/Courses.css" />
<link rel="stylesheet" href="~/css/Teacher.css" />
<div class="row row-cols-1 row-cols-md-3 g-4">
    @if (Model != null && Model.Any())
    {
        @foreach (var teacher in Model)
        {
            <div class="col">
                <div class="card teacher-card h-100 p-3">
                    <div class="card-body d-flex flex-column">
                        <h5 class="teacher-name card-title">@teacher.FullName</h5>
                        <p class="teacher-email card-text">@teacher.Email</p>
                        <div class="mt-auto">
                            <a asp-controller="Admin"
                               asp-action="AllAssignments"
                               asp-route-id="@teacher.Id"
                               class="btn btn-primary btn-sm">
                                View Assigned Courses
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col">
            <p>No teachers found.</p>
        </div>
    }
</div>
